{
  "name": "jamstack",
  "version": "1.0.0",
  "description": "Boilerplate for JAMstack website.",
  "scripts": {
    "prestart": "run-s clean 11ty:build:dev",
    "start": "run-p develop:*",
    "upgrade": "run-s upgrade:*",
    "upgrade:check": "npm-check-updates -u",
    "upgrade:update": "npm update",
    "upgrade:git-unstage-all": "git restore --staged .",
    "upgrade:git-stage-changes": "git add package.json package-lock.json",
    "upgrade:git-auto-commit": "git commit -m 'Upgrade npm packages'; true",
    "dev": "npm run start",
    "repl": "run-p purescript:repl",
    "prebuild": "run-p clean",
    "build": "run-s build:*",
    "build:generate": "run-s 11ty:build purescript:build postcss:build:critical postcss:build:async",
    "develop:generate": "run-p purescript:watch 11ty:watch postcss:watch:critical postcss:watch:async serve",
    "clean": "run-p clean:*",
    "clean:cache": "rimraf .tmp",
    "clean:site": "rimraf _site",
    "clean:pure": "rimraf output",
    "11ty:build": "eleventy --quiet",
    "11ty:build:dev": "ELEVENTY_ENV=development eleventy --quiet",
    "11ty:watch": "ELEVENTY_ENV=development eleventy --quiet --watch ",
    "parcel:build": "parcel build '.tmp/parcel/**/index.html' --cache-dir .tmp/.cache",
    "parcel:dev": "parcel serve --port 3000 '.tmp/parcel/**/index.html' --cache-dir .tmp/.cache",
    "parcel:watch": "parcel watch '.tmp/parcel/**/*.html' --cache-dir .tmp/.cache",
    "purescript:repl": "spago repl",
    "purescript:build": "NODE_ENV=production spago bundle-app --to pages/assets/js/index.js",
    "purescript:watch": "NODE_ENV=development spago bundle-app --watch --clear-screen --to pages/assets/js/index.js",
    "postcss:build:critical": "postcss pages/assets/css/critical.css -o _site/assets/css/critical.css",
    "postcss:build:async": "postcss pages/assets/css/index.css -o _site/assets/css/index.css",
    "postcss:watch:critical": "postcss pages/assets/css/critical.css -o _site/assets/css/critical.css --config .postcssrc.dev.js",
    "postcss:watch:async": "postcss pages/assets/css/index.css -o _site/assets/css/index.css --config .postcssrc.dev.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier:fix": "prettier --write '**/*.js'",
    "serve": "serve -l 3000 _site",
    "web:check": "lighthouse http://l:3000/ --view",
    "web:hint": "hint http://l:8080/"
  },
  "alias": {
    "pages": "./pages",
    "includes": "./src/includes",
    "data": "./src/data",
    "css": "./pages/assets/css",
    "js": "./pages/assets/js"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@babel/plugin-transform-strict-mode": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "fast-glob": "^3.2.2",
    "hint": "^6.0.5",
    "js-beautify": "^1.11.0",
    "lighthouse": "^5.6.0",
    "npm-check-updates": "^4.1.2",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.1",
    "parcel": "^2.0.0-alpha.3.2",
    "postcss-cli": "^7.1.1",
    "postcss-easy-import": "^3.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "serve": "^11.3.0",
    "tailwindcss": "^1.4.0",
    "workbox-build": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielstaleiny/JAMstack.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielstaleiny/JAMstack/issues"
  },
  "homepage": "https://github.com/danielstaleiny/JAMstack#readme"
}
